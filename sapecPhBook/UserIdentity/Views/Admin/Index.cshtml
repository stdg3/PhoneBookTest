@model IEnumerable<UserIdentity.Identity.ApplicationUser>
@{
    ViewBag.Title = "Index";
}

    <div class="panel panel-primary">
        <div class="panel-heading">
            Users
        </div>
        <table class="table table-striped">
            <tr>
                <td>Id</td>
                <td>Username</td>
                <td>Email</td>
            </tr>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="3" class="text-center">
                        User not found
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
        <tr>
            <td>@item.Id</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
        </tr>
                }

            }
        </table>
    </div>

